{
    "compilerOptions": {
        "target": "ES2016",
        "module": "commonjs",
        "lib": ["ES2020"],
        "allowJs": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "strict": false,
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*.ts"]
}
